
<% if current_user.donor %>
  <h2>Thanks, you paid <strong>$<%= @donation.amount %></strong>!</h2>
  <%= link_to "Back to Scholarship", scholarship_path(@donation.scholarship_id) %>

<% else %>
  <h2>Thanks, you paid <strong>$<%= @repayment.total %></strong>!</h2>
  <%= link_to "Back to Scholarship", scholarship_path(@repayment.scholarship_id) %>


<% end %>
