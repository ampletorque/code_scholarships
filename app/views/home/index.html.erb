<h1>Code Scholarships</h1>
<% if current_user %>
  <% if current_user.admin %>
    <h2> <%= link_to "Administration", users_path %> </h2>
  <% end %>
<% end %>

<% if current_user %>
<% if current_user && current_user.donor? %>
  <h2>Find a scholarship to donate to...</h2>
  <%= form_tag(scholarships_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search for Scholarships" %>
    <%= submit_tag "Search" %>
  <% end %>
<% else %>
  <%= link_to "Request a Scholarship", new_scholarship_path %>
<% end %>

  <% if @scholarships.present? %>
  <ul>
      <%= render @scholarships %>
  </ul>
  <% else %>
    <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
  <% end %>
<% end %>
