<div class="well wellSignup">
  <h1 class="whiteText">Sign up</h1>
  <hr>
  <%= render 'layouts/errors', :object => @user %>

    <%=form_for @user do |f| %>
    <%=f.label :username, class: "whiteText"  %><br>
    <%=f.text_field :username %><br>
    <%=f.label :name, class: "whiteText" %><br>
    <%=f.text_field :name %><br>
    <%=f.label :email, class: "whiteText" %><br>
    <%=f.text_field :email %><br>
    <%=f.label :city, class: "whiteText" %><br>
    <%=f.text_field :city %><br>
    <%=f.label :description, class: "whiteText" %><br>
    <%=f.text_area :description %><br>
    <%=f.label :new_password, class: "whiteText" %><br>
    <%=f.password_field :password %><br>
    <%=f.label :confirm_new_password, class: "whiteText" %><br>
    <%=f.password_field :password_confirmation%><br>
    <br>
    <%=f.label :profile_pic, class: "whiteText" %><br>
    <%= f.file_field :avatar %><br>
    <%=f.label :donor, "Are you a donor?", class: "whiteText"%>
    <%=f.collection_radio_buttons :donor, [[true, 'Yes'], [false, 'No']], :first, :last %><br>
    <hr>
    <%=f.submit "Save", :class => "btn btnWhite" %>
  <%end%>
</div>
