<div class="well wellSignup">
  <h1>Sign up</h1>
  <hr>
  <%= render 'layouts/errors', :object => @user %>

    <%=form_for @user do |f| %>
    <%=f.label :username %><br>
    <%=f.text_field :username %><br>
    <%=f.label :name %><br>
    <%=f.text_field :name %><br>
    <%=f.label :email %><br>
    <%=f.text_field :email %><br>
    <%=f.label :city %><br>
    <%=f.text_field :city %><br>
    <%=f.label :description %><br>
    <%=f.text_area :description %><br>
    <%=f.label :new_password %><br>
    <%=f.password_field :password %><br>
    <%=f.label :confirm_new_password %><br>
    <%=f.password_field :password_confirmation%><br>
    <br>
    <%=f.label :profile_pic %><br>
    <%= f.file_field :avatar %><br>
    <%=f.label :donor, "Are you a donor?"%>
    <%=f.collection_radio_buttons :donor, [[true, 'Yes'], [false, 'No']], :first, :last %><br>
    <hr>
    <%=f.submit "Save", :class => "btn btnWhite" %>
  <%end%>
</div>